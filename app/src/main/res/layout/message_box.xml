<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:minHeight="72dp"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:visibility="invisible"
    app:cardBackgroundColor="@color/shell_white_color"
    app:cardCornerRadius="16dp"
    app:cardElevation="12dp">

    <RelativeLayout
        android:id="@+id/message_box_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.9"

        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/message_box_icon"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/message_box_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_box_title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Text goes here"
                android:textColor="@color/defaultTextColor" />

            <TextView
                android:id="@+id/message_box_message"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Text goes here"
                android:textColor="@color/defaultTextColor" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
