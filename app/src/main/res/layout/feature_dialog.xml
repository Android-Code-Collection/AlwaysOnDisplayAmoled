<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text='@string/settings_watchface'
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text='@string/feature_dialog_desc'
        android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

    <CheckBox
        android:id="@+id/dialog_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/dialog_time" />

    <CheckBox
        android:id="@+id/dialog_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_calendar" />

    <CheckBox
        android:id="@+id/dialog_battery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_battery" />

    <Button
        android:id="@+id/dialog_done"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/done_button" />
</LinearLayout>